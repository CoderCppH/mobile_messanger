<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<Button
    android:textColor="@color/white"
    android:layout_margin="10dp"
    android:backgroundTint="#3F51B5"
    android:text="exit acc"
    android:onClick="btn_exit_clicked"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
</Button>
    <androidx.cardview.widget.CardView
        android:backgroundTint="#121212"
        android:layout_margin="10dp"
        app:cardCornerRadius="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="25dp"
                android:textColorHint="#2897A2"
                android:id="@+id/settings_id_edit_email"
                android:layout_margin="10dp"
                android:hint="Edit email"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="35dp">
            </TextView>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="15dp"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textColorHint="@color/black"
                    android:id="@+id/settings_id_edit_first_name"
                    android:layout_margin="10dp"
                    android:hint="Edit firstname"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="15dp"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textColorHint="@color/black"
                    android:id="@+id/settings_id_edit_last_name"
                    android:layout_margin="10dp"
                    android:hint="Edit lastname"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                </EditText>
            </androidx.cardview.widget.CardView>
            <Button
                android:onClick="btn_update_data_user"
                android:textColor="@color/white"
                android:backgroundTint="#4CAF50"
                android:text="Confirm"
                android:layout_margin="15dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
            </Button>
            <Button
                android:onClick="btn_delete_user"
                android:textColor="@color/white"
                android:backgroundTint="#F44336"
                android:text="Delete"
                android:layout_margin="15dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
            </Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>