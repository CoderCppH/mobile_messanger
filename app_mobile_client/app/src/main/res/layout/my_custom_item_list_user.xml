<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="#202b36"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/white"
        android:id="@+id/id_const_item_user_list_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/circlr_image"
        android:layout_toRightOf="@+id/circlr_image"
        android:paddingBottom="10dp"
        android:text="fullname"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/circlr_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
        >

    <ImageView
        android:id="@+id/id_const_item_user_list_image_profile"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/id_const_item_user_list_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_const_item_user_list_full_name"
        android:layout_toEndOf="@+id/circlr_image"
        android:layout_toRightOf="@+id/circlr_image"
        android:paddingTop="10dp"
        android:text="email"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textStyle="bold" />

</RelativeLayout>